<html>
    <head>
        <title>

        </title>
        <link rel="stylesheet" href="/css/home.css">
        <script src="https://kit.fontawesome.com/ff8a8ba3fb.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <div class="container">
            <div class="header">
                <h1>CSV Reader</h1>
                <p>Reads CSV file and display its content in tabular form</p>
            </div>
            <div class="form">
                <p>Upload New CSV File </p>
                <form action="/file/upload" method="post" enctype="multipart/form-data">
                    <input type="file" accept=".csv" name="uploaded_file" placeholder="Upload CSV File..." class="input-file">
                    <button type="submit" class="submit-button"><i class="fas fa-upload"></i></button>
                </form>
            </div>
            <div class="file-container">
                <% for(let i=0;i<files.length;i++){ %>
                    <div class="file-name">
                            <h3><%=files[i].substring(0,12) %></h3>
                            <a href="/file/open/?index=<%= i %>"class="bt">open</a>
                            <a href="/file/delete/?index=<%= i %>" id="delete"><i class="fa-solid fa-xmark"></i></a>
                    </div>
                <% } %>
            </div>
        </div>
        <footer>
            <div class="footer-content">
                <a href="" ><i class="fa-brands fa-github"></i> &nbsp; click here to view source code</a>
            </div>
        </footer>
       

    </body>
</html>